{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Image",
              "url": "${imgURL}",
              "size": "Small",
              "width": "40px",
              "height": "50px",
              "spacing": "None"
            }
          ]
        },
        {
          "type": "Column",
          "width": 50,
          "items": [
            {
              "type": "RichTextBlock",
              "inlines": [
                {
                  "type": "TextRun",
                  "text": "${HomerTitle}",
                  "weight": "Bolder"
                },
                {
                  "type": "TextRun",
                  "text": "  ",
                  "isSubtle": true
                },
                {
                  "type": "TextRun",
                  "text": "${NameApp}",
                  "highlight": true
                }
              ]
            },
            {
              "type": "RichTextBlock",
              "inlines": [
                {
                  "type": "TextRun",
                  "text": "${Response}"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}