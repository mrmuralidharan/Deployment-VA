{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "Office 365 Health Status",
      "wrap": true,
      "color": "Accent"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 40,
          "wrap": true,
          "items": [
            {
              "type": "TextBlock",
              "text": "ID",
              "weight": "Bolder",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 70,
          "wrap": true,
          "items": [
            {
              "type": "TextBlock",
              "text": "Title",
              "weight": "Bolder",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 50,
          "wrap": true,
          "items": [
            {
              "type": "TextBlock",
              "text": "Service",
              "weight": "Bolder",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 50,
          "items": [
            {
              "type": "TextBlock",
              "text": "Status",
              "wrap": true,
              "weight": "Bolder"
            }
          ]
        }
      ]
    },
    {
      "$data": "${Value}",
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${id}",
                  "wrap": true
                }
              ],
              "width": 40
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${title}",
                  "wrap": true
                }
              ],
              "width": 70
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${service}",
                  "wrap": true
                }
              ],
              "width": 50
            },
            {
              "type": "Column",
              "width": 50,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${status}",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "wrap": true,
                  "text": "Modified",
                  "weight": "Bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "${formatDateTime(lastModifiedDateTime,'MM-dd-yyyy hh:mm')}",
                  "wrap": true,
                  "spacing": "None"
                }
              ]
            }
          ]
        }
      ],
      "separator": true,
      "spacing": "Medium"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}