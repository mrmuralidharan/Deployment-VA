{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Incident Details",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true,
              "color": "Accent"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Title",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${title}",
              "spacing": "Small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Description",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${impactDescription}",
              "spacing": "Small",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Service",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "Small",
              "wrap": true,
              "text": "${service}"
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Status",
              "isSubtle": true,
              "verticalAlignment": "Center",
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "verticalAlignment": "Center",
              "spacing": "Small",
              "wrap": true,
              "text": "${status}"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Incident ID",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${id}",
              "spacing": "Small",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Feature",
              "isSubtle": true,
              "verticalAlignment": "Center",
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "verticalAlignment": "Center",
              "spacing": "Small",
              "wrap": true,
              "text": "${feature}"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Small",
      "columns": [
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Start Date",
              "isSubtle": true,
              "verticalAlignment": "Center",
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${formatDateTime(startDateTime,'MM-dd-yyyy hh:mm')}",
              "verticalAlignment": "Center",
              "spacing": "Small",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "TextBlock",
              "text": "Last Modified",
              "isSubtle": true,
              "verticalAlignment": "Center",
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${formatDateTime(lastModifiedDateTime,'MM-dd-yyyy hh:mm')}",
              "verticalAlignment": "Center",
              "spacing": "Small",
              "wrap": true
            }
          ]
        }
      ]
    }
  ]
}